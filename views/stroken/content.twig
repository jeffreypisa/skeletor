<section id="{% if item.titel %}{{ item.titel|sanitize }}{% else %}strook_{{ sectionno }}{% endif %}" class="strook-content {{ item.achtergrond }}">
	<div class="container">
		{% if item.titel %}
			<h2>{{ item.titel }}</h2>
		{% endif %}
		{% if item.tekst %}
			<p>{{ item.tekst }}</p>
		{% endif %}
		
		{% if item.link %}
			{{ button(item.link) }}
		{% endif %}
	</div>
</section>