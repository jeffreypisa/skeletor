{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body id="post-{{ post.ID }}" class="{{ body_class }} post-type-{{ post.post_type }}" data-template="base.twig">
		{{ function('wp_body_open') }}
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		
		{% block header %}
			{% include 'header.twig' %}
		{% endblock %}
		
		<main role="main" class="content-wrapper">
			{% if title %}<h1 class="d-none">{{title}}</h1>{% endif %}
			{% block content %}
				Sorry, no content
			{% endblock %}
		</main>

		{% block footer %}
			{% include 'footer.twig' %}
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
