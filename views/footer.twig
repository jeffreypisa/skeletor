<footer id="footer">
	{% if options.footer_calltoaction_titel or options.footer_calltoaction_tekst or options.footer_calltoaction_link %}
		<div class="calltoaction bg-primary text-white text-center">
			<div class="container">
				<div class="row">
					<div class="col-md-10 offset-md-1 col-xl-8 offset-xl-2">
						{{ heading(options.footer_calltoaction_titel, {
							level: 'h3',
							inview_animation: 'word-rise',
							inview_animation_speed: 0.5
						}) }}
						{{ text(options.footer_calltoaction_tekst) }}
						<br>
						{{ button(options.footer_calltoaction_link, 'outline-light') }}
					</div>
				</div>
			</div>
		</div>
	{% endif %}
	<div class="footer bg-dark text-light">
		{% set footer_sections = footermenu.get_items %}
		{% set section_columns = [] %}
		{% set standalone_links = [] %}
		{% for section in footer_sections %}
			{% if section.children|length > 0 %}
				{% set section_columns = section_columns|merge([section]) %}
			{% else %}
				{% set standalone_links = standalone_links|merge([section]) %}
			{% endif %}
		{% endfor %}
		{% set privacy_url = function('get_privacy_policy_url') %}
		{% set cookie_page = function('get_page_by_path', 'cookieverklaring') ?: function('get_page_by_path', 'cookie-verklaring') %}
		<div class="container">
			<div class="footer-main row justify-content-between gy-5">
				<div class="col-lg-4 text-center text-lg-start">
					<a href="{{ site.url }}" class="footer-brand">
						<img src="{{ theme.link }}/assets/images/emonks-color.svg" alt="{{ site.name }}" height="48">
					</a>
					<div class="footer-address">
						{{ text(options.footer_navigatie_tekst) }}
					</div>
				</div>
				<div class="col-lg-7 col-xxl-6">
					<div class="row row-cols-1 row-cols-sm-2 row-cols-xl-3 g-4">
						{% for section in section_columns %}
							<div class="col">
								<nav class="footer-nav" aria-label="{{ section.title }}">
									<h5 class="footer-title">{{ section.title }}</h5>
									{% if section.children|length > 0 %}
										<ul class="footer-menu list-unstyled">
											{% for child in section.children %}
												<li>
													<a href="{{ child.link }}" {% if child.target %}target="{{ child.target }}" rel="noopener"{% endif %}>{{ child.title }}</a>
												</li>
											{% endfor %}
										</ul>
									{% endif %}
								</nav>
							</div>
						{% endfor %}
						{% if standalone_links|length > 0 %}
							<div class="col">
								<nav class="footer-nav" aria-label="{{ options.footer_navigatie_menu_titel ?: 'Navigatie' }}">
									<h5 class="footer-title">{{ options.footer_navigatie_menu_titel ?: 'Navigatie' }}</h5>
									<ul class="footer-menu list-unstyled">
										{% for item in standalone_links %}
											<li>
												<a href="{{ item.link }}" {% if item.target %}target="{{ item.target }}" rel="noopener"{% endif %}>{{ item.title }}</a>
											</li>
										{% endfor %}
									</ul>
								</nav>
							</div>
						{% endif %}
					</div>
				</div>
			</div>

			<div class="footer-meta text-center">
				<div class="footer-meta-links">
					{% if privacy_url %}
						<a href="{{ privacy_url }}">Privacyverklaring</a>
					{% endif %}
					{% if cookie_page %}
						<a href="{{ function('get_permalink', cookie_page.ID) }}">Cookieverklaring</a>
					{% endif %}
					<a href="https://www.emonks.nl/" target="_blank" rel="noopener">Website door Emonks</a>
				</div>

				{% if options.facebook or options.instagram or options.linkedin or options.x %}
					<ul class="footer-social list-unstyled">
						{% if options.facebook %}
							<li>{{ icon({ icon: 'facebook', style: 'brands', class: 'footer-social-link', icon_wrapper_height: 26, icon_wrapper_width: 26, title: 'Facebook', title_position: 'right', title_class: 'visually-hidden', url: options.facebook, target: 'blank' }) }}</li>
						{% endif %}
						{% if options.instagram %}
							<li>{{ icon({ icon: 'instagram', style: 'brands', class: 'footer-social-link', icon_wrapper_height: 26, icon_wrapper_width: 26, title: 'Instagram', title_position: 'right', title_class: 'visually-hidden', url: options.instagram, target: 'blank' }) }}</li>
						{% endif %}
						{% if options.linkedin %}
							<li>{{ icon({ icon: 'linkedin', style: 'brands', class: 'footer-social-link', icon_wrapper_height: 26, icon_wrapper_width: 26, title: 'LinkedIn', title_position: 'right', title_class: 'visually-hidden', url: options.linkedin, target: 'blank' }) }}</li>
						{% endif %}
						{% if options.x %}
							<li>{{ icon({ icon: 'x-twitter', style: 'brands', class: 'footer-social-link', icon_wrapper_height: 26, icon_wrapper_width: 26, title: 'X', title_position: 'right', title_class: 'visually-hidden', url: options.x, target: 'blank' }) }}</li>
						{% endif %}
					</ul>
				{% endif %}

				<div class="footer-copyright">Â© {{ "now"|date('Y') }} {{ site.title }}</div>
			</div>
		</div>
	</div>
</footer>
