{% extends "base.twig" %}

{% block content %}
	<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">	
		<section class="bg-transparent">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-md-11 col-lg-10 col-xl-9">
						<div class="heading">
							{{ heading(post.title, {
								level: 'h1',
								class: 'mb-0'
							}) }}
							{{ text(post.wanneer, {
							class: 'text-blue mb-0 mt-3',
							tag: 'span'
							}) }}
							{{ text(post.locatie, {
							class: 'text-blue m-0',
							tag: 'span'
							}) }}
						</div>
					</div>
				</div>
			</div>
		</section>
		<section class="bg-bluelight">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-md-11 col-lg-10 col-xl-9">
						{{ post.content }}
					</div>
				</div>
			</div>
		</section>
	</article>
{% endblock %}