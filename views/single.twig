{% extends "base.twig" %}

{% block content %}
	<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
		<section class="bg-transparent">
			<div class="container">
				<div class="row justify-content-start">
					<div class="col-md-11 col-lg-10 col-xl-9">
						<div class="heading">
							{{ heading(post.title, {
								level: 'h1',
								class: 'mb-0'
							}) }}
							{{ text(post.wanneer, {
							class: 'text-blue mb-0 mt-3',
							tag: 'span'
							}) }}
							{{ text(post.locatie, {
							class: 'text-blue m-0',
							tag: 'span'
							}) }}
						</div>
					</div>
				</div>
			</div>
		</section>
		{% if post.content %}
			<section class="bg-greylight inpage-nav-section" data-inpage-nav-section>
				<div class="container">
					<div class="row justify-content-between">
						<div class="col-lg-7">
							<div class="inpage-nav-content" data-inpage-nav-content>
								{{ post.content }}
							</div>
						</div>
						<div class="col-lg-4">
							{{ inpage_nav({
								title: 'Inhoud',
								mode: 'nav'
							}) }}
						</div>
					</div>
				</div>
					{{ inpage_nav({
						title: 'Inhoud',
						mode: 'mobile'
					}) }}
			</section>
		{% endif %}
		{% include 'stroken.twig' %}
	</article>
{% endblock %}
