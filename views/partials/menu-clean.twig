<ul class="navbar-nav">
	{% for item in items %}
		<li class="nav-item {{ item.classes | join(' ') }} d-flex align-items-center">
			<a href="{{ item.link }}" {% if item.current %}aria-current="page"{% endif %} {% if item.target %}target="{{ item.target }}"{% endif %}>
				{{ item.title }}
			</a>
		</li>
		{% for child in item.children %}
			<li class="nav-item {{ child.classes | join(' ') }} d-flex align-items-center">
				<a href="{{ child.link }}" {% if child.current %}aria-current="page"{% endif %} {% if child.target %}target="{{ child.target }}"{% endif %}>
					{{ child.title }}
				</a>
			</li>
		{% endfor %}
	{% endfor %}
</ul>
