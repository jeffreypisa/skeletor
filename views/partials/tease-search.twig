<a href="{{ fn('get_permalink', item.ID) }}" class="search-tease d-flex align-items-center gap-3 py-2">
    {% set thumb = get_thumbnail(item.ID) %}
    {% if thumb %}
        {{ image(thumb, {
            figure_class: 'mb-0 flex-shrink-0',
            img_class: 'rounded',
            ratio: '1x1',
            object_fit: 'cover',
            lazyload: true,
            style: 'width: 80px; height: 80px'
        }) }}
    {% else %}
        <div class="flex-shrink-0 bg-light rounded" style="width:80px;height:80px;"></div>
    {% endif %}
    <div class="flex-grow-1">
        <div class="text-muted small">{{ fn('get_post_type_object', item.post_type).labels.singular_name }}</div>
        <h3 class="h5 m-0">{{ item.post_title }}</h3>
    </div>
</a>
