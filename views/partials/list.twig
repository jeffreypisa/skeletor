{% if posts|length %}
	<div class="row">
		{% for item in posts %}
			<div class="col-md-6 col-xxl-4 mb-4 fade-in-item visible">
				{# Probeer eerst tease-[post_type].twig, anders tease.twig #}
				{% include [
					'partials/tease-' ~ item.post_type ~ '.twig',
					'partials/tease.twig'
				] with { item: item } %}
			</div>
		{% endfor %}
	</div>
	<div data-max-pages="{{ max_pages|e('html_attr') }}" hidden></div>
{% else %}
	<p>Geen resultaten gevonden.</p>
{% endif %}

<div id="result-count" style="display: none;">{{ total }} resultaten gevonden</div>