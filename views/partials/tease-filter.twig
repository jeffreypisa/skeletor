<a href="{{ fn('get_permalink', item.ID) }}" class="tease d-flex h-100" id="tease-{{ item.id }}">
	<div class="card p-4 border-0 bg-orangelight flex-fill">
		{{ image(get_thumbnail(item.ID), {
			figure_class: 'rounded bg-orange',
			img_class: 'rounded',
			ratio: '16x9',
			object_fit: 'cover',
			lazyload: true,
			show_caption: false,
			caption_position: 'on-right'
		}) }}
		<div data-mh>
			{{ heading(item.post_title, {
				level: 'h3',
				class: 'h4 mt-0 mb-0'
			}) }}
			{{ text(item.post_date|date('d F Y'), {
				max_length: 100
			}) }}
			{{ text(item.post_excerpt|strip_html, {
				class: 'd-none d-xl-block'
			}) }}
			<div class="d-flex flex-wrap gap-1">
				<span class="badge text-bg-dark"> {{ item.uren }} uur </span>
				<span class="badge text-bg-dark"> â‚¬{{ item.prijs }} </span>
				{% set vakgebieden = item.terms('vakgebied') %}
				{% if vakgebieden %}
				<span class="badge text-bg-dark"> {{ vakgebieden|map(t => t.name)|join(', ') }}</span>
				{% endif %}
			</div>
		</div>
		<i class="fal fa-arrow-right text-right"></i>
	</div>
</a>