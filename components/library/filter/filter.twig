{#
üß© Filter Component ‚Äì filter.twig

Gebruik dit component uitsluitend voor presentatie-instellingen van filters.

Voorbeeld:
{{ filter(filters.uren, {
  limit_options: 3,
  option_list_expand_label: 'Meer opties',
  option_list_collapse_label: 'Minder opties',
  placeholder: 'Maak een keuze',
  layout: 'horizontal',
  show_field_label: true,
  show_option_counts: true
}) }}

Beschikbare presentatie-opties:
- limit_options: int ‚Äì aantal direct zichtbare opties v√≥√≥r "Toon meer"
- option_list_expand_label: string ‚Äì tekst voor uitklappen
- option_list_collapse_label: string ‚Äì tekst voor inklappen
- placeholder: string ‚Äì placeholdertekst bij select
- layout: 'vertical' (default) of 'horizontal'
- show_field_label: true/false (default: true)
- show_option_counts: true/false ‚Äì toon aantal resultaten per optie
#}

{% set name = name ?? data.acf_field ?? data.name ?? '' %}
{% set acf_field = data.acf_field ?? name %}
{% set value = value ?? data.value ?? '' %}
{% set type = type ?? data.type ?? '' %}
{% set label = label ?? data.label ?? '' %}
{% set options = options ?? data.options ?? {} %}
{% set placeholder = placeholder ?? 'Maak een keuze' %}
{% set show_field_label = show_field_label ?? true %}
{% set show_option_counts = show_option_counts ?? false %}
{% set limit_options = limit_options ?? 0 %}
{% set option_list_expand_label = option_list_expand_label ?? 'Toon meer' %}
{% set option_list_collapse_label = option_list_collapse_label ?? 'Toon minder' %}

{% if not name %}
  <pre>‚ùå Ongeldige filterdata ontvangen
  {{ dump(data) }}</pre>
{% endif %}

<div class="mb-4">
  {% if label and show_field_label %}
    <label class="form-label">{{ label }}</label>
  {% endif %}

  {# Select dropdown #}
  {% if type == 'select' %}
    <select name="{{ name }}" class="form-select">
      <option value="">{{ placeholder }}</option>
      {% for key, val in options %}
        <option value="{{ val }}" {{ val == value ? 'selected' : '' }}>{{ key }}</option>
      {% endfor %}
    </select>

  {# Checkbox or radio buttons #}
  {% elseif type == 'checkbox' or type == 'radio' %}
      {% set selected = value is iterable ? value : [value] %}
      {% set input_type = type %}
      {% set option_wrapper_attrs = [] %}
      {% set limited = limit_options > 0 %} {# ‚úÖ FIX toegevoegd #}
      {% if limit_options %}
        {% set option_wrapper_attrs = option_wrapper_attrs|merge([
          'data-limit-options="' ~ limit_options ~ '"',
          'data-expand-label="' ~ option_list_expand_label ~ '"',
          'data-collapse-label="' ~ option_list_collapse_label ~ '"'
        ]) %}
      {% endif %}
<div class="form-check-group" {{ option_wrapper_attrs|join(' ')|raw }}>{% for key, val in options %}
          <div class="form-check">
            <input class="form-check-input" type="{{ input_type }}" name="{{ name }}{{ input_type == 'checkbox' ? '[]' : '' }}" id="{{ name }}-{{ loop.index }}" value="{{ val }}" {% if val in selected %}checked{% endif %}>
            <label class="form-check-label" for="{{ name }}-{{ loop.index }}">
              {{ key }}{% if show_option_counts and counts[val] is defined %} ({{ counts[val] }}){% endif %}
            </label>
          </div>
        {% endfor %}
        {% if limited %}
          <button type="button" class="btn btn-link filter-toggle-btn d-none"></button>
        {% endif %}
      </div>



  {# Range inputs with slider #}
  {% elseif type == 'range' %}
    <div class="range-wrapper">
      <div class="d-flex gap-2 align-items-center mb-3">
        <input type="number"
               class="form-control"
               name="min_{{ acf_field }}"
               value="{{ value.min ?? options.min }}"
               min="{{ options.min }}"
               max="{{ options.max }}">
        <span class="text-muted">tot</span>
        <input type="number"
               class="form-control"
               name="max_{{ acf_field }}"
               value="{{ value.max ?? options.max }}"
               min="{{ options.min }}"
               max="{{ options.max }}">
      </div>

      <div class="range-slider"
           data-slider
           data-min="{{ options.min }}"
           data-max="{{ options.max }}">
      </div>
    </div>
  {% endif %}
</div>